@model List<Book>
@{
    ViewData["Title"] = "لیست کتاب ها";
}

<div class="container">
    <a asp-controller="Book" asp-action="Create" class="btn btn-sm btn-danger">ثبت کتاب جدید</a>
</div>

<div>
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>شناسه</th>
                <th>نام کتاب</th>
                <th>توضیحات</th>
                <th>عنوان</th>
                <th>نویسنده</th>
                <th>آدرس</th>
                <th>تعداد کل</th>
                <th>تاریخ انتشار</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Title</td>
                    <td>@item.Auther</td>
                    <td>@item.Address</td>
                    <td>@item.TotalNumber</td>
                    <td>@item.PublishDate</td>
                    <td>
                        <a href="/Book/Edit?id=@item.Id" class="btn btn-sm btn-warning">ویرایش</a>
                        <a asp-controller="Book" class="btn btn-sm btn-primary" asp-action="Delete" asp-route-id="@item.Id">حذف</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>