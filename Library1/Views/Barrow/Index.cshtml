@model List<Barrow>

<h2>لیست امانت‌ها</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">ایجاد امانت جدید</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>شناسه</th>
            <th>شناسه کتاب</th>
            <th>شناسه عضو</th>
            <th>تحویل داده شده</th>
            <th>تاریخ شروع</th>
            <th>تاریخ پایان</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.BookId</td>
                <td>@item.MemberId</td>
                <td>@(item.WasDelivered ?? false ? "بله" : "خیر")</td>
                <td>@item.StartDate</td>
                <td>@item.EndtDate</td>
                <td>
                    <a asp-action="Details" class="btn btn-sm btn-outline-warning" asp-route-id="@item.Id">جزئیات</a> |
                    <a asp-action="Edit" class="btn btn-sm btn-outline-danger" asp-route-id="@item.Id">ویرایش</a> |
                    <a asp-action="Delete" class="btn btn-sm btn-outline-primary" asp-route-id="@item.Id">حذف</a>
                </td>
            </tr>
        }
    </tbody>
</table>
