@model Barrow

<h2>ویرایش امانت</h2>

@using (Html.BeginForm())
{
    <input type="hidden" asp-for="Id" />

    <div class="form-group col-md-3">
        <label asp-for="BookId">شناسه کتاب:</label>
        <input asp-for="BookId" class="form-control" />
        <span asp-validation-for="BookId" class="text-danger"></span>
    </div>

    <div class="form-group col-md-3">
        <label asp-for="MemberId">شناسه عضو:</label>
        <input asp-for="MemberId" class="form-control" />
        <span asp-validation-for="MemberId" class="text-danger"></span>
    </div>

    <div class="form-group col-md-3">
        <label asp-for="WasDelivered">تحویل داده شده:</label>
        <input asp-for="WasDelivered" class="form-control" />
        <span asp-validation-for="WasDelivered" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">ذخیره</button>
}
